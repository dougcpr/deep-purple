[Unit]
Description=Freedom Robotics Micro Service
After=multi-user.target

[Service]
Type=simple
EnvironmentFile={ENVIRONMENT_FILE}
ExecStart={PYTHON_PATH} {AGENT_PATH} start
ExecStop={PYTHON_PATH} {AGENT_PATH} stop
ExecReload={PYTHON_PATH} {AGENT_PATH} restart
KillMode=process
User={USER}
RestartSec=20
Restart=always
RemainAfterExit=no
TimeoutStartSec=10
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
